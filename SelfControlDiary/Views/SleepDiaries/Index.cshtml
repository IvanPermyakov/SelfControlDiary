@model IEnumerable<SelfControlDiary.Models.SleepDiary>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create">Добавить новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Время начала сна</th>
            <th scope="col">Время пробуждения</th>
            <th scope="col">Время сна</th>
            <th scope="col">Оценка сна</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Up)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourSleep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
